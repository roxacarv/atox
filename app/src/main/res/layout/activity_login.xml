<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_loginscreen"
    tools:context=".usuario.gui.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/logo_cenoura" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nós somo ATOX!"
            android:fontFamily="@font/google_sans_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_regular"
            android:text="ajudando você a achar comida limpa"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:drawableLeft="@mipmap/ic_email"
            android:hint="Seu email"
            android:textSize="14sp"
            android:fontFamily="@font/google_sans_regular"
            android:drawableTint="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"/>

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="Sua senha"
            android:textSize="14sp"
            android:fontFamily="@font/google_sans_regular"
            android:drawableTint="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_rounded"
            android:fontFamily="@font/google_sans_bold"
            android:text="ENTRAR"
            android:onClick="logar"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewRegistro"
            android:onClick="goToRegisterScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Não tem conta? REGISTRE-SE"
            android:textSize="16sp"
            android:fontFamily="@font/google_sans_bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"/>
    </LinearLayout>
</RelativeLayout>